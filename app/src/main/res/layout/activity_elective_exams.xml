<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ElectiveExamsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/elective_exams"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/EditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:hint="@string/write_here"
                android:inputType="textMultiLine"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/exam2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/Button_edit2"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:drawableStart="@drawable/ic_edit_black"
                    android:drawableLeft="@drawable/ic_edit_black"
                    android:paddingLeft="6dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/Button_delete2"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:drawableStart="@drawable/ic_delete_black"
                    android:drawableLeft="@drawable/ic_delete_black"
                    android:paddingLeft="6dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/exam3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

