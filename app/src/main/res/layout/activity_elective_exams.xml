                    android:drawableLeft="@drawable/ic_delete_black"
                    android:paddingLeft="6dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
