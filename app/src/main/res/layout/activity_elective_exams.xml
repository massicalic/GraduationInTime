                    android:layout_height="38dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:drawableStart="@drawable/ic_edit_black"
                    android:drawableLeft="@drawable/ic_edit_black"
                    android:paddingLeft="6dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/Button_delete3"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:drawableStart="@drawable/ic_delete_black"
                    android:drawableLeft="@drawable/ic_delete_black"
                    android:paddingLeft="6dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
