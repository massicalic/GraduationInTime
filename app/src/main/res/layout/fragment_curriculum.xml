<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurriculumFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="@string/title_curriculum"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:layout_marginTop="250dp"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_info"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/Button_personal"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_edit_black"
                    android:drawableLeft="@drawable/ic_edit_black"
                    android:paddingLeft="6dp"/>

                <Button
                    android:id="@+id/Button_personal_info"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/yellow"
                    android:drawableStart="@drawable/ic_question"
                    android:drawableLeft="@drawable/ic_question"
                    android:paddingLeft="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/argument_min"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on" />

                        <TextView
                            android:id="@+id/TextView_birthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/TextView_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_birth_place1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birth_place" />

                        <TextView
                            android:id="@+id/TextView_birth_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_citizenship1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/citizenship" />

                        <TextView
                            android:id="@+id/TextView_citizenship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_cf1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cf" />

                        <TextView
                            android:id="@+id/TextView_cf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_address1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address" />

                        <TextView
                            android:id="@+id/TextView_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_driving1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license" />

                        <TextView
                            android:id="@+id/TextView_driving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/TextView_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/without_car"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_email1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email" />

                        <TextView
                            android:id="@+id/TextView_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">

                        <TextView
                            android:id="@+id/TextView_cell1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell" />

                        <TextView
                            android:id="@+id/TextView_cell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/born_on"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView_links"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/professional_goal"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_goal"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_goal_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soft_skill"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_skill"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_skill_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="@string/experiences"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_experiences"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_experiences_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_experiences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/education"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_education"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_education_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_skills"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_language"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_language_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/it_skills"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_it"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_it_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_it"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_workplace"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:layout_margin="10dp"/>

                    <Button
                        android:id="@+id/Button_distance"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_edit_black"
                        android:drawableLeft="@drawable/ic_edit_black"
                        android:paddingLeft="6dp"/>

                    <Button
                        android:id="@+id/Button_distance_info"
                        android:layout_width="35dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_question"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingLeft="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>