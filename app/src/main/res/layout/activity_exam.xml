<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExamActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/title_exam"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_titleExam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analisi"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/03/19"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/TextView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/TextView_place2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/TextView_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prof"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/TextView_prof2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/TextView_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/TextView_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>