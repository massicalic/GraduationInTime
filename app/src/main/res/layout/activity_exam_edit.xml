<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExamEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/title_exam"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_titleExam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analisi"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/EditText_date"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/date"
                    android:inputType="none"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/EditText_time"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/time"
                    android:inputType="none"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/EditText_place"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="@string/place_edit"
                android:inputType="text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:id="@+id/EditText_prof"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="@string/prof_edit"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:id="@+id/EditText_info"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:hint="@string/info_edit"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>